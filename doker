#!/bin/bash

# Trigerred when you mispell the 'docker' command as 'doker'
# Inspired by the Steam Locomotive (SL)

clear

echo "





                 .-----:
               .'       \`.
         ,    /       (o) \\
         \`._/          ,__)
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~


"

tput cup 0 0

sleep 0.1

echo "




                       :   
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.1

echo "



                       :
                       :   
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

sleep 0.1

tput cup 0 0

echo "


                      . .
                      -:-
                       :   
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.1

echo "


                      . .
                    '.-:-.\`
                       :   
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.1

echo "


                      . .
                    '.-:-.\`
                    '  :  \`
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.1

echo "

                                    
                                    
                                    
                    '  :  \`
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.1

echo "

                                    
                                    
                                    
                                    
                 .-----:       
               .'       \`.         
         ,    /       (o) \\        
         \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.3

echo "

                                      
                                      
                                      
                                      
                   .-----:       
                 .'       \`.         
           ,    /       (o) \\        
           \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.3

echo "

                                      
                                      
                                      
                                      
                     .-----:       
                   .'       \`.         
             ,    /       (o) \\        
             \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.3

echo "

                                      
                                      
                                      
                                      
                       .-----:       
                     .'       \`.         
               ,    /       (o) \\        
               \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.3

echo "

                                      
                                      
                                      
                                      
                          .-----:       
                        .'       \`.         
                  ,    /       (o) \\        
                  \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

tput cup 0 0

sleep 0.3

echo "

                                      
                                      
                                      
                                      
                             .-----:       
                           .'       \`.         
                     ,    /       (o) \\        
                     \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"

s="  "

for i in $(seq 5); do
    s+="   "
    tput cup 0 0
    sleep 0.25
    echo "

                                      
                                      
                                      
                                      
${s}                             .-----:       
${s}                           .'       \`.         
${s}                     ,    /       (o) \\        
${s}                     \`._/          ,__)         
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

"
